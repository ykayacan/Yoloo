<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="BaselineGridTextView">
    <attr name="lineHeightMultiplierHint" format="float" />
    <attr name="lineHeightHint" format="float" />
    <attr name="maxLinesByHeight" format="boolean" />
  </declare-styleable>

  <declare-styleable name="CompatTextView">
    <attr name="drawableStart" format="reference" />
    <attr name="drawableTop" format="reference" />
    <attr name="drawableEnd" format="reference" />
    <attr name="drawableBottom" format="reference" />
  </declare-styleable>

  <declare-styleable name="LinkableTextView">
    <attr name="pattern_hashtag" format="string" />
    <attr name="pattern_mention" format="string" />
    <attr name="enabledLinks" format="boolean" />
    <attr name="enabledMention" format="boolean" />
    <attr name="enabledHashtag" format="boolean" />
    <attr name="enabledEmail_address" format="boolean" />
    <attr name="enabledPhone" format="boolean" />
    <attr name="enabledWeb_url" format="boolean" />
    <attr name="enabledIp_address" format="boolean" />
    <attr name="enabledUnderlines" format="boolean" />
    <attr name="enabledMentionUnderline" format="boolean" />
    <attr name="enabledHashtagUnderline" format="boolean" />
    <attr name="enabledEmail_addressUnderline" format="boolean" />
    <attr name="enabledPhoneUnderline" format="boolean" />
    <attr name="enabledWeb_urlUnderline" format="boolean" />
    <attr name="enabledIp_addressUnderline" format="boolean" />
  </declare-styleable>

  <declare-styleable name="SpannedGridLayoutManager">
    <attr name="android:orientation" />
    <attr name="spanCount" />
    <attr name="aspectRatio" format="string" />
  </declare-styleable>

  <declare-styleable name="StateLayout">
    <attr name="loadingLayout" format="reference" />
    <attr name="emptyLayout" format="reference" />
    <attr name="errorLayout" format="reference" />
    <attr name="initialViewState" format="enum">
      <enum name="content" value="0" />
      <enum name="error" value="1" />
      <enum name="empty" value="2" />
      <enum name="loading" value="3" />
    </attr>
    <attr name="contentViewId" format="reference" />
    <attr name="animateStateChanges" format="boolean" />
  </declare-styleable>

  <declare-styleable name="FabGroupView">
    <attr name="fabText" format="string"/>
    <attr name="fabIcon" format="reference"/>
  </declare-styleable>

</resources>