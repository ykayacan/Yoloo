<resources>

  <style name="Yoloo.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>

    <item name="android:windowBackground">@color/background_grey_100</item>
    <!--<item name="colorControlHighlight">@color/ripple_light</item>-->
  </style>

  <style name="Yoloo" parent="Yoloo.Base"> <!-- pre-Lollipop -->
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="Yoloo.Splash" parent="Yoloo">
    <item name="android:windowBackground">@drawable/layer_splash</item>
  </style>

  <style name="Yoloo.Button" parent="@style/Widget.AppCompat.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">?attr/android:textColorPrimary</item>
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
  </style>

  <style name="Yoloo.Button.White">
    <item name="android:colorButtonNormal">@android:color/white</item>
    <item name="android:textColor">@color/primary</item>
  </style>

  <style name="Yoloo.Button.Colored" parent="@style/Widget.AppCompat.Button.Colored">
    <item name="android:textColor">@android:color/white</item>
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
  </style>

  <style name="Yoloo.Button.Colored.Subscribe">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="Yoloo.Button.Auth" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/primary</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Yoloo.Button.AccountChooser">
    <item name="android:textAllCaps">false</item>
    <item name="android:drawablePadding">20dp</item>
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>

  <style name="Yoloo.Button.AccountChooser.GoogleButton">
    <item name="android:drawableLeft">@drawable/ic_googleg_color_24dp</item>
    <item name="android:background">@drawable/idp_button_background_google</item>
    <item name="android:textColor">#757575</item>
  </style>

  <style name="Yoloo.Button.AccountChooser.FacebookButton">
    <item name="android:drawableLeft">@drawable/ic_facebook_white_22dp</item>
    <item name="android:background">@drawable/idp_button_background_facebook</item>
    <item name="android:textColor">@color/com_facebook_button_text_color</item>
  </style>

  <style name="Yoloo.Button.StartUsing" parent="@style/Yoloo.Button.Colored" />

  <style name="Yoloo.Button.Follow" parent="@style/Yoloo.Button.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">40dp</item>
  </style>

  <style name="Yoloo.Button.Empty" parent="@style/Yoloo.Button.Colored">
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:paddingRight">48dp</item>
    <item name="android:paddingEnd">48dp</item>
    <item name="android:paddingLeft">48dp</item>
    <item name="android:paddingStart">48dp</item>
    <item name="android:drawableLeft">@drawable/ic_bounty_coin_36dp</item>
    <item name="android:drawableStart">@drawable/ic_bounty_coin_36dp</item>
  </style>

  <style name="Yoloo.Button.Bounty" parent="@style/Yoloo.Button.Empty">
    <item name="colorButtonNormal">@color/primary_blue</item>
  </style>

  <style name="Yoloo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Yoloo.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar" />

  <style name="Yoloo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="Widget.Yoloo" parent="@android:style/Widget" />

  <style name="Widget.Yoloo.ThumbOverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
    <item name="android:src">@drawable/layer_remove</item>
  </style>

  <style name="Widget.Yoloo.FeedAction">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/spacing_normal</item>
    <item name="android:drawablePadding">16dp</item>
  </style>

  <style name="Widget.Yoloo.InputContainer">
    <item name="android:focusableInTouchMode">true</item>
    <item name="android:background">@drawable/login_input_container_bg</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Widget.Yoloo.ProfileCard">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    <item name="android:textColor">@color/profile_card_text</item>
    <item name="android:padding">4dp</item>
    <item name="android:textAlignment">center</item>
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
  </style>

  <style name="Widget.Yoloo.ProfileCard.Image">
    <item name="android:tint">@android:color/white</item>
    <item name="android:padding">14dp</item>
  </style>

  <style name="Widget.Yoloo.Username" parent="TextAppearance.AppCompat.Body2">
    <item name="android:maxEms">6</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
  </style>

  <style name="Widget.Yoloo.NewcomersUsername" parent="TextAppearance.AppCompat.Body2">
    <item name="android:maxEms">6</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
  </style>

  <style name="Widget.Yoloo.Username.Inverse">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Widget.Yoloo.Username.Nav">
    <item name="android:maxEms">8</item>
  </style>

  <style name="Widget.Yoloo.Bounty" parent="TextAppearance.AppCompat.Subhead">
    <item name="android:gravity">center</item>
    <item name="drawableStart">@drawable/ic_bounty_coin_24dp</item>
    <item name="android:drawablePadding">6dp</item>
  </style>

  <style name="Widget.Yoloo.ProfileCounter" parent="TextAppearance.AppCompat.Small">
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="TextAppearance.UnreadCount" parent="android:TextAppearance">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/shape_message_count_bg</item>
  </style>

  <style name="TextAppearance.ToolbarMenu" parent="TextAppearance.AppCompat.Menu">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
  </style>

  <style name="TextAppearance.GroupTitle" parent="@style/TextAppearance.AppCompat.Body1">
    <item name="android:textColor">@color/primary</item>
    <item name="android:textAllCaps">true</item>
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
  </style>

  <style name="TextAppearance.GroupMore" parent="@style/TextAppearance.GroupTitle">
    <item name="android:textColor">@color/secondary</item>
  </style>

  <style name="TextAppearance.ConversationTitle" parent="android:TextAppearance">
    <item name="android:textSize">18sp</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
  </style>

  <style name="TextAppearance.FeedNews" parent="android:TextAppearance">
    <item name="android:textColor">@android:color/white</item>
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
  </style>

  <style name="TextAppearance.BlogTitle" parent="@style/TextAppearance.AppCompat.Title">
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
  </style>

  <style name="TextAppearance.CategoryTitle" parent="@style/TextAppearance.AppCompat.Body1">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="TextAppearance.CatalogCategoryTitle" parent="android:TextAppearance">
    <item name="android:textSize">17sp</item>
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    <item name="android:textColor">@color/catalog_category_text</item>
  </style>

  <style name="TextAppearance.EmptyTitle" parent="@style/TextAppearance.AppCompat.Subhead">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
  </style>

  <style name="TextAppearance.TrendingBlogTitle" parent="@style/TextAppearance.AppCompat.Subhead">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    <item name="android:maxLines">2</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="TextAppearance.BountyText" parent="android:TextAppearance">
    <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    <item name="android:textColor">@color/primary_yellow</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="TextAppearance.SubscriberCount" parent="android:TextAppearance">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="TextAppearance.TotatlBountyTitle" parent="android:TextAppearance">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="TextAppearance.EditorItemText" parent="android:TextAppearance">
    <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>

</resources>