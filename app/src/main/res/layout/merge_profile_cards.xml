<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="8dp"
  app:justifyContent="space_around"
  app:layout_scrollFlags="scroll|enterAlways|snap"
  tools:showIn="@layout/controller_profile">

  <android.support.v7.widget.CardView
    android:id="@+id/card_profile_point_count"
    android:layout_width="108dp"
    android:layout_height="108dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <ImageView
      style="@style/Widget.Yoloo.ProfileCard.Image"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/primary"
      app:srcCompat="@drawable/ic_bookmark_star_32dp" />

    <TextView
      android:id="@+id/tv_profile_point_count"
      style="@style/Widget.Yoloo.ProfileCard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="60dp"
      android:gravity="center"
      tools:text="@string/label_profile_points" />

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/card_profile_bounty_count"
    android:layout_width="108dp"
    android:layout_height="108dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <ImageView
      style="@style/Widget.Yoloo.ProfileCard.Image"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/primary_yellow"
      app:srcCompat="@drawable/ic_coin_stack_32dp" />

    <TextView
      android:id="@+id/tv_profile_bounty_count"
      style="@style/Widget.Yoloo.ProfileCard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="60dp"
      android:gravity="center"
      tools:text="@string/label_profile_bounties" />

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/card_profile_country_count"
    android:layout_width="108dp"
    android:layout_height="108dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <ImageView
      style="@style/Widget.Yoloo.ProfileCard.Image"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/primary_blue"
      app:srcCompat="@drawable/ic_flag_black_32dp" />

    <TextView
      android:id="@+id/tv_profile_country_count"
      style="@style/Widget.Yoloo.ProfileCard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="60dp"
      android:gravity="center"
      tools:text="@string/label_profile_countries" />

  </android.support.v7.widget.CardView>

</com.google.android.flexbox.FlexboxLayout>